.sideBar {
  overflow: hidden;
  width: 12em;
  position: absolute;
  bottom: 0;
  top: 3em;
  padding-top: 1em;
  background-color: #2B2B2B;
}

.sideButton {
	text-align: center;
}

.sideButton a {
  display: block;
	transition: all 0.2s ease;
	-webkit-transition: all 0.2s ease;
  -moz-transition: all 0.2s ease;
  -ms-transition: all 0.2s ease;
	text-decoration: none;
	padding: 0.2em .5em;
	font-size: 1.1em;
	white-space: nowrap;
	margin-bottom: 0.5em;
  color: #CCCCCC
}

.sideButton a:hover {
	background: #363636;
}

.navBar {
  position: relative;
  background-color: #CCCCCC;
  top: 0;
  height: 3em;
  line-height: 3em;
}

.navBar a {
	text-decoration: none;
	font-size: 0.9em;
	white-space: nowrap;
	margin: 0.5em 2.5em 0.5em 0.5em;
  color: #2B2B2B;
}

.navBar a:hover {
  color: #A15000;
}

.navTab {
  float: right;
  padding: 0;
}

.navSetting {
  float: right;
  border-left: 1px solid black;
  border-right: 1px solid black;
  padding: 0;
}

.navDivider {
  border-right: 1px solid #2B2B2B;
  width: 0;
  height: 1.5em; 
  float: right;
  margin: 0.75em 2.5em 0.5em 0.5em;
  padding: 0;
}

.logo {
  display: inline-block;
  float: left;
}