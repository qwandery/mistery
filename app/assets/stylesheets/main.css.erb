html {
  height: 100%;
  overflow: hidden;
}

body {
  background-color: <%= Styles::Colors::LIGHT_GREY %>;;
  color: #2B2B2B;
  font-family: 'LatoLatin', sans-serif;
  font-size: 90%;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

h1 {
  font-size: 1.2em;
}

h2 {
  font-size: 1em;
}

.main {
  position: absolute;
  top: 60px;
  left: 250px;
  bottom: 0;
  right: 1em;
  overflow: auto;
}

.mainText {
  max-width: 60em;
}

.flash {
  position: absolute;
  color: black;
  z-index: 999;
  width: 100%;
  text-align: center;
  font-weight: bold;
}

.flash.error {
  border: solid 0.1em #900;
  background-color: #FF6565;
}

.flash.notice {
  border: solid 0.1em #26722D;
  background-color: #A4E7A0;
}

.flash.notice {
  border: solid 0.1em #26722D;
  background-color: #A4E7A0;
}

.fade {
  visibility:hidden;
  opacity:0;
  transition:visibility 0s linear 0.5s,opacity 0.5s linear;
}

.mainLink {
  border: none;
  background-color: white;
  color: #006699;
  text-decoration: none;
  cursor: pointer;
  font-family: 'LatoLatin', sans-serif;
  font-size: 1em;
  margin: 0;
  padding: 0;
  outline: none;
}

.inlineBlock {
  display: inline-block;
}
